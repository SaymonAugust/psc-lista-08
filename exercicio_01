// Arquivo: Exercicio1_TrianguloNumerico.cs
using System;

class Program
{
    static void Main()
    {
        Console.Write("Digite um número inteiro (n): ");
        int n = int.Parse(Console.ReadLine());

        ImprimirPadrao(n);
    }

    // Função que imprime o padrão numérico até a n-ésima linha
    static void ImprimirPadrao(int n)
    {
        for (int i = 1; i <= n; i++) // controla a linha
        {
            for (int j = 1; j <= i; j++) // controla quantas vezes o número aparece na linha
            {
                Console.Write(i + " ");
            }
            Console.WriteLine(); // quebra de linha
        }
    }
}

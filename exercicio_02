// Arquivo: Exercicio2_TrianguloCrescente.cs
using System;

class Program
{
    static void Main()
    {
        Console.Write("Digite um número inteiro (n): ");
        int n = int.Parse(Console.ReadLine());

        ImprimirPadrao(n);
    }

    // Função que imprime o padrão 1 até n por linha
    static void ImprimirPadrao(int n)
    {
        for (int i = 1; i <= n; i++) // controla o número da linha
        {
            for (int j = 1; j <= i; j++) // imprime de 1 até i
            {
                Console.Write(j + " ");
            }
            Console.WriteLine(); // quebra de linha
        }
    }
}
